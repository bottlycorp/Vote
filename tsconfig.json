{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "module": "CommonJS",

    "outDir": "./build/",

    "strict": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "$core/*": ["./src/*"]
    }
  }
}